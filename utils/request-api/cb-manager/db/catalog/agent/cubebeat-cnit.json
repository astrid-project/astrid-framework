{
    "id": "cubebeat",
    "partner": "cnit",
    "parameters": [
        {
            "id": "synflood-enabled",
            "type": "boolean",
            "example": true,
            "description": "Enable/disable the collection of synflood data",
            "config": {
                "schema": "yaml",
                "source": "/opt/cubebeat/config.d/synflood.yml",
                "path": [
                    "0",
                    "enabled"
                ]
            }
        },
        {
            "id": "synflood-period",
            "type": "time-duration",
            "example": "10s",
            "description": "Period to collect the synflood data",
            "config": {
                "schema": "yaml",
                "source": "/opt/cubebeat/config.d/synflood.yml",
                "path": [
                    "0",
                    "period"
                ]
            }
        }
    ],
    "resources": [
        {
            "id": "config-file",
            "description": "Configuration file to collect synflood data",
            "config": {
                "path": "/opt/cubebeat/config.d/synflood.yml"
            },
            "example": "https://github.com/astrid-project/astrid-framework/blob/75ff3182b290b44329dc146140af5e4e083484ed/agents/cubebeat/settings/master/config.d/synflood.yml"
        }
    ],
    "actions": [
        {
            "id": "start",
            "status": "started",
            "config": {
                "cmd": "sudo /opt/cubebeat/cubebeat"
            }
        },
        {
            "id": "stop",
            "status": "stopped",
            "config": {
                "cmd": "sudo killall -9 cubebeat"
            }
        }
    ]
}
