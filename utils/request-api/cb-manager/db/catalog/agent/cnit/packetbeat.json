{
    "id": "packetbeat",
    "partner": "cnit",
    "parameters": [
        {
            "id": "interface",
            "type": "string",
            "example": "eth0",
            "description": "The network device to capture traffic from (you can specify any for the device)",
            "config": {
                "schema": "yaml",
                "source": "/opt/astrid/packetbeat/packetbeat.yml",
                "path": [
                    "packetbeat",
                    "interfaces",
                    "device"
                ]
            }
        },
        {
            "id": "icmp-enabled",
            "type": "boolean",
            "example": true,
            "description": "Enable/disable the stats of ICMP packets",
            "config": {
                "schema": "yaml",
                "source": "/opt/astrid/packetbeat/packetbeat.yml",
                "path": [
                    "packetbeat",
                    "protocols",
                    "icmp",
                    "enabled"
                ]
            }
        },
        {
            "id": "kafka-topic",
            "type": "string",
            "example": "",
            "description": "Kafka output topic.",
            "config": {
                "schema": "yaml",
                "source": "/opt/astrid/packetbeat/packetbeat.yml",
                "path": [
                    "packetbeat",
                    "output",
                    "topic"
                ]
            }
        }
    ],
    "actions": [
        {
            "id": "start",
            "status": "started",
            "config": {
                "cmd": "curl -XPOST localhost:9999/service-start"
            }
        },
        {
            "id": "stop",
            "status": "stopped",
            "config": {
                "cmd": "curl -XPOST localhost:9999/service-stop"
            }
        },
        {
            "id": "restart",
            "status": "started",
            "config": {
                "cmd": "curl -XPOST localhost:9999/service-restart"
            }
        },
        {
            "id": "status",
            "config": {
                "cmd": "curl localhost:9999/service-status"
            }
        }
    ]
}
