{
    "id": "filebeat",
    "parameters": [{
            "id": "log-enabled",
            "type": "boolean",
            "example": true,
            "description": "Enable/disable the collection of log data",
            "config": {
                "schema": "yaml",
                "source": "/opt/filebeat/config/log.yml",
                "path": [
                    "0",
                    "enabled"
                ]
            }
        },
        {
            "id": "log-period",
            "type": "time-duration",
            "example": "10s",
            "description": "Period to collect the log data",
            "config": {
                "schema": "yaml",
                "source": "/opt/filebeat/config/log.yml",
                "path": [
                    "0",
                    "backoff"
                ]
            }
        }
    ],
    "resources": [{
        "id": "config-file",
        "description": "Configuration file to collect log data",
        "config": {
            "path": "/opt/filebeat/config/log.yml"
        },
        "example": "https://gitlab.com/guard2/guard-platform/-/blob/297be389b24e4fefda75cd8620629ede8e73d593/local_sidercars/monitoring/filebeat/settings/7.8.0/config/log.yml"
    }],
    "actions": [{
            "id": "start",
            "status": "started",
            "config": {
                "cmd": "/opt/filebeat/filebeat run -c /opt/filebeat/filebeat.yml",
                "daemon": true
            }
        },
        {
            "id": "stop",
            "status": "stopped",
            "config": {
                "cmd": "killall -9 filebeat"
            }
        },
        {
            "id": "restart",
            "status": "started",
            "config": {
                "cmd": "killall -HUP filebeat"
            }
        }
    ]
}