{
    "id": "packetbeat",
    "actions": [{
            "id": "start",
            "status": "started",
            "config": {
                "cmd": "/opt/packetbeat/packetbeat run -c /opt/packetbeat/packetbeat.yml",
                "daemon": true
            }
        },
        {
            "id": "stop",
            "status": "stopped",
            "config": {
                "cmd": "killall -9 packetbeat"
            }
        },
        {
            "id": "restart",
            "status": "started",
            "config": {
                "cmd": "killall -HUP packetbeat"
            }
        }
    ]
}