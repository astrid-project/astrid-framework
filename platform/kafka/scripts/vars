#!/bin/bash
# ASTRID - Kafka
# author: Alex Carrega <alessandro.carrega@cnit.it>

COMPONENT=kafka
COMPONENT_DEP=zookeeper
VERSION=2.6.0
SCALA_VERSION=2.12
INSTALLATION_PATH=/opt/$COMPONENT
SOURCE=$COMPONENT_$SCALA_VERSION-$VERSION
FILE=$SOURCE.tgz

TMP_PATH=/tmp
PIDFILE=$TMP_PATH/$COMPONENT.pid
PIDFILE_DEP=$TMP_PATH/$COMPONENT_DEP.pid

ZOOKEEPER_PORT=2181
KAFKA_PORT=9092
