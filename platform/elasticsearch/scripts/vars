#!/bin/bash
# ASTRID - Elasticsearch
# author: Alex Carrega <alessandro.carrega@cnit.it>

COMPONENT=elasticsearch
VERSION=7.8.0
INSTALLATION_PATH=/opt/$COMPONENT
SOURCE=$COMPONENT-$VERSION
FILE=$SOURCE-linux-x86_64.tar.gz

TMP_PATH=/tmp
PIDFILE=$TMP_PATH/$COMPONENT.pid

ELASTICSEARCH_PORT=9200
ELASTICSEARCH_MONITORING_ENABLED=false
ELASTICSEARCH_TRANSPORT_TCP_PORT=9300
